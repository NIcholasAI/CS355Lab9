<!DOCTYPE html>
<html>
<head>
    <title>Account - View All </title>
</head>
<body>
<h1>Account</h1>

<% if(locals.was_successful){%>
<div>
    <div id="message">
        <%= account.email %> was successfully deleted.
    </div>
</div>
<% }%>

<a href="/account/add" > Add New Account</a> <br />
<table border="1">
    <tr>
        <th>ID</th>
        <th>E-mail</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    <% for(var i =0; i <account.length; i++) { %>
    <tr>
        <td><%= account[i].account_id %></td>
        <td><%= account[i].email %></td>
        <td><%= account[i].first_name%></td>
        <td><%= account[i].last_name%></td>
        <td><a href='/account/edit/?account_id=<%= account[i].account_id%>'>
                Edit
            </a>
        </td>
        <td>
            <a href='/account/delete/?account_id=<%= account[i].account_id%>'>
                Delete
            </a>
        </td>
    </tr>
    <% } %>
</table>

</body>
</html>