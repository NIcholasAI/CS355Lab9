<!DOCTYPE html>
<html>
<head>
    <title>Student - View All </title>
</head>
<body>
<h1>Student</h1>
<% if(locals.was_successful){%>
<div>
    <div id="message">
        <%= students.first_name %> was successfully deleted.
    </div>
</div>
<% }%>
<a href="/student/add" > Add New Student</a> <br />
<table border="1">
    <tr>
        <th>Student ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Student Number</th>
        <th>Actions</th>
    </tr>
    <% for(var i =0; i <students.length; i++) { %>
    <tr>
        <td><%= students[i].student_id %></td>
        <td><%= students[i].first_name %></td>
        <td><%= students[i].last_name%></td>
        <td><%= students[i].student_number%></td>
        <td><a href='/student/edit/?student_id=<%= students[i].student_id%>'>
                Edit
            </a>
             &nbsp; <a href='/student/delete/?student_id=<%= students[i].student_id%>'>
                Delete
            </a>
        </td>
    </tr>
    <% } %>
</table>

</body>
</html>